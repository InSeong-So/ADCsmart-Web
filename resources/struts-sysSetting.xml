<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="sysSetting" namespace="/sysSetting" extends="json-hierarchy">
		<action name="loadUserListContent" method="loadUserListContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/userListContent.ftl</result>
		</action>
		<action name="loadUserAddContent" method="loadUserAddContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/userAddContent.ftl</result>
		</action>
		<action name="loadUserRoleModifyContent" method="loadUserModifyContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/userAddRoleContent.ftl</result>
		</action>
		<action name="loadAccntCloneRole" method="loadAccntCloneRole" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="loadUserModifyContent" method="loadUserModifyContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/userModifyContent.ftl</result>
		</action>
		<action name="changePassword" method="changePassword" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="addUser" method="addUser" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="UserIdCheck" method="UserIdCheck" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="delAccounts" method="delAccounts" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="modifyUser" method="modifyUser" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		
		<!-- 시스템 정보 -->
		<action name="loadSystemInfoContent" method="loadSystemInfoContent" class="systemInfoAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/systemInfoContent.ftl</result>
		</action>
		<action name="loadSystemInfo" method="loadSystemInfo" class="systemInfoAction">
			<result type="jsonHierarchy"/>
		</action>			
		<!-- 라이선스 -->
		<action name="loadLicenseContent" method="loadLicenseContent" class="configSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/licenseContent.ftl</result>
		</action>
		<action name="uploadFileContent" method="uploadFileContent" class="configSettingAction">
			<!-- <result type="jsonHierarchy"/> -->
			 <result type="jsonHierarchy">
			 	<param name="contentType">text/html</param> 
			 </result>
		</action>
		<!-- 환경설정 -->
		<action name="loadConfigContent" method="loadConfigContent" class="configSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/configContent.ftl</result>
		</action>	
		<action name="modifyConfigContent" method="modifyConfigContent" class="configSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="modifySyncSystemTimeConfig" method="modifySyncSystemTimeConfig" class="configSettingAction">
			<result type="jsonHierarchy"/>
		</action>	
		
		<!-- adc log -->
		<action name="loadLogContent" method="loadLogContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/logContent.ftl</result>
		</action>	
		<action name="loadLogTableInContent" method="loadLogContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/logTableInContent.ftl</result>
		</action>

		<!-- vsFilter-->
		<action name="retrieveVsFilterTotal" method="retrieveVsFilterTotal" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="loadVsFilterListContent" method="loadVsFilterListContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/vsFilter/vsFilterListContent.ftl</result>
		</action>
		<action name="loadVsFilterTableInListContent" method="loadVsFilterListContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/vsFilter/vsFilterTableInContent.ftl</result>
		</action>
		<action name="showVSFilterList" method="showVSFilterList" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="hideVSFilterList" method="hideVSFilterList" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
					
		<!-- 서비스 그룹 -->
		<action name="retrieveServiceGroupTotal" method="retrieveServiceGroupTotal" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="loadServiceGroupContent" method="loadServiceGroupContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/serviceGrp/serviceGrpListContent.ftl</result>
		</action>
		<action name="loadServiceGrpTableInListContent" method="loadServiceGroupContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/serviceGrp/serviceGrpTableInListContent.ftl</result>
		</action>
		<action name="loadServiceGrpAddContent"	method="loadServiceGrpAddContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/serviceGrp/serviceGrpAddContent.ftl</result>
		</action>
		<action name="loadServiceGrpModifyContent"	method="loadServiceGrpModifyContent" class="sysSettingAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/serviceGrp/serviceGrpAddContent.ftl</result>
		</action>
		<action name="serviceGrpNameCheck" method="serviceGrpNameCheck" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="addServiceGrp" method="addServiceGrp" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="modifyServiceGrp" method="modifyServiceGrp" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="delServiceGrp" method="delServiceGrp" class="sysSettingAction">
			<result type="jsonHierarchy"/>
		</action>
	</package>
	
	<package name="sysBackup" namespace="/sysSetting/backup" extends="json-hierarchy">
		<action name="loadListContent" method="loadListContent" class="sysBackupAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/backup/listContent.ftl</result>
		</action>
		<action name="loadSysBackupTableInListContent" method="loadListContent" class="sysBackupAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/backup/backupTableInListContent.ftl</result>
		</action>
		<action name="retrieveSysBackupsTotal" method="retrieveSysBackupsTotal" class="sysBackupAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="loadAddContent" method="loadAddContent" class="sysBackupAction">
			<result type="freemarker">/WEB-INF/pages/sysSetting/backup/addContent.ftl</result>
		</action>
		<action name="addSysBackup" method="addSysBackup" class="sysBackupAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="delSysBackups" method="delSysBackups" class="sysBackupAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="delBackupSchedule" method="delBackupSchedule" class="sysBackupAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="isDownloadFileExist" method="isDownloadFileExist" class="sysBackupAction">
			<result type="jsonHierarchy"/>
		</action>
		<action name="downloadBackupfile" method="downloadBackupfile" class="sysBackupAction">
        	<result type="stream">
                <param name="contentType">application/octet-stream</param>
                <param name="contentLength">${contentLength}</param>
                <param name="contentDisposition">${contentDisposition}</param>
                <param name="inputName">inputStream</param>
                <param name="bufferSize">8192</param>
            </result>
        </action>		
	</package>
</struts>